<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/page"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            />

        <LinearLayout

            android:id="@+id/SliderDots"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/viewPager"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>
    </RelativeLayout>




    <RelativeLayout
        android:paddingTop="20dp"
        android:id="@+id/FreeCallLayout"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/FreeCallImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/telefon_free"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:textSize="17dp"
            android:id="@+id/FreeCalltxt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Free Call"
            android:layout_marginLeft="6dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/FreeCallImage"
            android:layout_toEndOf="@+id/FreeCallImage" />

        <TextView
            android:textSize="17dp"
            android:gravity="right"
            android:id="@+id/FreeCallNumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/FreeCalltxt"
            android:layout_toEndOf="@+id/FreeCalltxt" />
    </RelativeLayout>
    <View
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#72CFFF" />
    <RelativeLayout
        android:id="@+id/WebsiteLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/WebsiteImage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/global" />

        <TextView
            android:id="@+id/Websitetxt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:text="www"
            android:textSize="17dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/WebsiteImage"
            android:layout_toEndOf="@+id/WebsiteImage"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/WebsiteAddress"
            android:layout_toLeftOf="@+id/Websitetxt"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"

            android:textSize="17dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <View
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#72CFFF" />
    <RelativeLayout
        android:id="@+id/PhoneLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/PhoneImage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/contact" />

        <TextView
            android:id="@+id/Phonetxt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/PhoneImage"
            android:text="Phone"
            android:textSize="17dp" />


        <TextView
            android:id="@+id/PhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="17dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/Phonetxt"
            android:layout_toEndOf="@+id/Phonetxt" />

    </RelativeLayout>
    <View
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#72CFFF" />

       <RelativeLayout
        android:id="@+id/AddressLayout"
        android:layout_marginTop="15dp"
           android:layout_marginLeft="14dp"
           android:layout_marginRight="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/AddressImage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:onClick="goToAddress"
            android:src="@drawable/location"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:id="@+id/Addresstxt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Address"
            android:layout_toRightOf="@+id/AddressImage" />


        <TextView
            android:textSize="17dp"
            android:gravity="right"
            android:id="@+id/AddressPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Addresstxt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
       </RelativeLayout>
    <View
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#72CFFF" />
    <RelativeLayout
        android:id="@+id/emailAddess"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/emailIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:clickable="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/emai" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:id="@+id/Emailtxt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="E-mail Address"
            android:layout_toRightOf="@+id/emailIcon" />


        <TextView
            android:textSize="17dp"
            android:gravity="right"
            android:id="@+id/emailaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Emailtxt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



    </RelativeLayout>
    <View
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#72CFFF" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/social_network"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/facebook_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:paddingRight="40dp"
            android:src="@drawable/face" />

        <ImageView
            android:layout_weight="1"
            android:id="@+id/twitt_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingRight="13.3dp"
            android:src="@drawable/twit"

            />
        <ImageView
            android:layout_weight="1"
            android:id="@+id/instagram_icon"
            android:layout_width="20dp"
            android:paddingLeft="13.3dp"
            android:layout_height="20dp"
            android:src="@drawable/insta"
            />
        <ImageView
            android:layout_weight="1"
            android:id="@+id/google_plus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingLeft="40dp"
            android:src="@drawable/goog"

            />



    </LinearLayout>
</LinearLayout>
</ScrollView>