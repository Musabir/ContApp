<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_single"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >



    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/telefon_free"
            android:id="@+id/img34"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_alignBottom="@+id/addresss"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:paddingLeft="20dp"
            android:id="@+id/invisible_textview"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="Musabusdwqwjdqwhiudhuqwidhqiuw"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/img34" />
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img34"
            android:gravity="fill_horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Musaidsfsdsf"
            android:textSize="14sp"
           />

        <TextView
            android:id="@+id/addresss"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:layout_toEndOf="@+id/img34"
            android:layout_toRightOf="@+id/img34"
            android:hint="Address"
            android:paddingLeft="20dp"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/tollfreebutton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/img34"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:focusable="false"

            android:focusableInTouchMode="false"
            android:src="@drawable/telefon_free"
           />
        <ImageView
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_marginTop="8dp"
            android:focusableInTouchMode="false"
            android:paddingLeft="15dp"
            android:src="@drawable/ic_collapse_00012"
            android:tint="#A3A3A4"
            android:layout_alignTop="@+id/tollfreebutton"
            android:layout_toLeftOf="@+id/tollfreebutton"
          />
    </RelativeLayout>
</LinearLayout>
